{
  "name": "git-log-generator-root",
  "version": "2.0.2",
  "author": "Trae Pair Programmer",
  "description": "Git Log Generator - Root Manager",
  "private": true,
  "main": "main.js",
  "scripts": {
    "install:all": "npm install && npm install --prefix backend && npm install --prefix frontend",
    "dev": "npm run electron:dev",
    "electron:dev": "concurrently --kill-others \"npm run dev --prefix frontend\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build --prefix frontend && electron-builder"
  },
  "build": {
    "appId": "com.gitlog.generator",
    "productName": "Git Log Generator",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "package.json",
      "main.js",
      "preload.js",
      "backend/**/*",
      "frontend/dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "frontend/public/favicon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "asar": true,
    "asarUnpack": [
      "backend/**/*"
    ]
  },
  "dependencies": {
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "playwright": "^1.57.0",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^34.5.8",
    "electron-builder": "^26.4.0",
    "wait-on": "^7.2.0"
  }
}
